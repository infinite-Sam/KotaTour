<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
         <!-- com.yhs.project.dto.MemberDTO 클래스를 member라는 별칭으로 정의 -->
        <typeAlias type="com.yhs.project.dto.MemberDTO" alias="member"/>
    </typeAliases>

    <mappers>
        <!-- mapper/MemberMapper.xml 파일을 매퍼로 등록 -->
        <mapper resource="mapper/MemberMapper.xml"/>
    </mappers>
</configuration>
